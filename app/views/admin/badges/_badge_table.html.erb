<% if @badges.present? %>
  <div class="card-header">
    <h1 class="card-title">
      <%= t('.granted_badges') %>
    </h1>
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
      <tr>
        <th class="sort-by-title pointer">
          <%= t('.table.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('.table.image') %></th>
      </tr>
      </thead>

      <%= render @badges %>

    </table>
  </div>
<% end %>